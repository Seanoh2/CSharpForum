@model IEnumerable<forumwebsiteCA3.Models.posts>

@{ int id = 0; }
<br />

@foreach (var post in Model) {
    id = post.forumID;
}

<div class="imgBanner" id="back-@id"></div>

<center>@Html.ActionLink("Add post", "addPost", "posts", new { forumID = Model.FirstOrDefault().forumID}, null)</center>
<br />

<table class="table">
    <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Rating</th>
    </tr>
    @foreach (var post in Model) {
        <tr>
            <td>
                @Html.ActionLink(@post.title, "goToPostById", "posts", new { post.postID }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => post.content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => post.score)
            </td>
        </tr>

    }
</table>
